<!DOCTYPE html>
<html>
<head>
  <title>Avisos e Lembretes</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/sidebar') %>

  <div style="padding: 20px; margin-left: 210px;">
    <h2 class="title-page">Avisos e Lembretes</h2>

    <form action="/avisos" class="form-avisos" method="POST">
      <label>Para:</label>
      <select name="para" required>
        <option value="Todos">Todos</option>
        <option value="Dayvson">Dayvson</option>
        <option value="Victor">Victor</option>
        <option value="Miqueias">Miqueias</option>
        <option value="Thalita">Thalita</option>
        <option value="Kelvyn">Kelvyn</option>
      </select>

      <label>WhatsApp do cliente (opcional):</label>
      <input type="text" name="whatsapp" placeholder="Ex: 85999999999">

      <label>Texto:</label>
      <textarea name="texto" required></textarea>

      <button type="submit">+ Registrar Aviso</button>
    </form>

    <% avisos.forEach(a => { %>
      <div class="card card-avisos">
        <form action="/avisos/deletar" method="POST" style="float: right;">
          <input type="hidden" name="linha" value="<%= a.linha %>">
          <button type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="25" height="25" viewBox="0 0 30 30" fill="#f00303">
                <path d="M 14.984375 2.4863281 A 1.0001 1.0001 0 0 0 14 3.5 L 14 4 L 8.5 4 A 1.0001 1.0001 0 0 0 7.4863281 5 L 6 5 A 1.0001 1.0001 0 1 0 6 7 L 24 7 A 1.0001 1.0001 0 1 0 24 5 L 22.513672 5 A 1.0001 1.0001 0 0 0 21.5 4 L 16 4 L 16 3.5 A 1.0001 1.0001 0 0 0 14.984375 2.4863281 z M 6 9 L 7.7929688 24.234375 C 7.9109687 25.241375 8.7633438 26 9.7773438 26 L 20.222656 26 C 21.236656 26 22.088031 25.241375 22.207031 24.234375 L 24 9 L 6 9 z"></path>
            </svg>
          </button>
        </form>
        <strong><%= a.para %></strong> - <%= a.data %><br>
        <% if (a.whatsapp) { %>
          <a href="https://wa.me/55<%= a.whatsapp.replace(/\D/g, '') %>" target="_blank">ðŸ“² WhatsApp</a><br>
        <% } %>
        <p><%= a.texto %></p>

      </div>
    <% }) %>
  </div>
</body>
</html>
